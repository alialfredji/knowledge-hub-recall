{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@types": ["src/types"],
      "@/*": ["src/*"]
    }
  },
  "lib": ["es2015"],
  "include": ["src/**/*"]
}
